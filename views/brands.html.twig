<h1>Brands</h1>
    {% if brands is not empty%}
    <p>Here are all brands:</p>
    <ul>
      {% for brand in brands %}
      <li>{{ brand.getName }}  <a href="/brand/{{ brand.getId }}">Detail</a></li>
      {% endfor%}
    </ul>
    {% endif %}

    <form action="/brands/create" method="post">
      <label for="name">New brand name:</label>
      <input type="text" name="name" id="name">
      <button type="submit" name="button">Add brand</button>
    </form>

    <form action="/brands/delete" method="post">
      <button type="submit" name="button">Clear all brand</button>
</form>

<a href="/">Home Page</a>
